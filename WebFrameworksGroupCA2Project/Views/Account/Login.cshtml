@using WebFrameworksGroupCA2Project.Models
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="col-md-3 card p-3">
        <h2 class="text-center text-bg-danger-info">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-1">
                <label style="color: black; font-weight: bold;" asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label style="color: black; font-weight: bold;" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-1 form-check">
                <label style="color: black; font-weight: bold;" class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />@Html.DisplayFor(a => a.RememberMe)
                </label>
            </div>

            <div class="row">
                <div class="col-8">
                    <a asp-action="Register" class="text-decoration-none float-start mt-2">Don't have an account?</a>
                </div>
                <div class="col-4">
                    <input type="submit" value="Login" class="btn btn-primary btn-sm float-end" />
                </div>
            </div>
        </form>
        
        <p class="text-center my-3 ">Or : </p>

        <!-- Google Sign-In Button (Styled with Google logo) -->
        <div class="mt-1">
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })" class="btn btn-outline-danger d-flex align-items-center rounded-3 px-2 py-1 w-auto text-decoration-none">
                <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google Logo" class="me-2" style="width: 24px; height: 24px;">
                <span class="fs-6">Continue with Google</span>
            </a>
        </div>
        
        <!-- Microsoft Sign-In Button (Styled with Microsoft logo) -->
        <div class="mt-2">
            <a href="@Url.Action("ExternalLogin", "Account", new { provider = "Microsoft" })" class="btn btn-outline-danger d-flex align-items-center rounded-3 px-2 py-1 w-auto text-decoration-none">
                <img src="https://img.icons8.com/color/48/000000/microsoft.png" alt="Microsoft Logo" class="me-2" style="width: 24px; height: 24px;">
                <span class="fs-6">Continue with Microsoft</span>
            </a>
        </div>    
        
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
