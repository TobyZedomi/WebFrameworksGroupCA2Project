@using WebFrameworksGroupCA2Project.DTOs
@model PlaylistPostDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <h1 class="text-center mb-4">Create Playlist</h1>
        <div class="card shadow p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="PlaylistName" class="form-label text-black"></label>
                    <input asp-for="PlaylistName" class="form-control" />
                    <span asp-validation-for="PlaylistName" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="StatusPrivate" />
                    <label class="form-check-label text-black" asp-for="StatusPrivate">@Html.DisplayNameFor(model => model.StatusPrivate)</label>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label text-black"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}