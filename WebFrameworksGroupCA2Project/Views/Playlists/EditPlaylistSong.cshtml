@model WebFrameworksGroupCA2Project.Models.PlaylistSong

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<!---<div asp-validation-summary="ModelOnly" class="text-danger"></div>-->

<h4>PlaylistSong</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPlaylistSong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlaylistId" class="control-label"></label>
                <select asp-for="PlaylistId" class="form-control" asp-items="ViewBag.PlaylistId"></select>
                <span asp-validation-for="PlaylistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongId" class="control-label"></label>
                <select asp-for="SongId" class="form-control" asp-items="ViewBag.SongId"></select>
                <span asp-validation-for="SongId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllSongsInPlaylist" asp-route-id="@Model?.PlaylistId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}